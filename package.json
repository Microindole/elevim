{
  "name": "elevim",
  "version": "1.1.1",
  "main": "dist/main/index.js",
  "scripts": {
    "start": "npm run build && electron .",
    "build": "node build.js",
    "dist": "npm run build && electron-builder",
    "release": "npm run dist -- --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Microindole/elevim.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Microindole/elevim/issues"
  },
  "homepage": "https://github.com/Microindole/elevim#readme",
  "description": "一个使用 Electron 和 CodeMirror 构建的轻量级文本编辑器",
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.25.11",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.1",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-go": "^6.0.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-php": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-rust": "^6.0.2",
    "@codemirror/lang-sql": "^6.10.0",
    "@codemirror/lang-vue": "^0.1.3",
    "@codemirror/language": "^6.11.3",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/lint": "^6.9.1",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.6",
    "@replit/codemirror-indentation-markers": "^6.5.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "codemirror": "^6.0.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "http-client": "^4.3.1",
    "jiti": "^2.6.1",
    "node-pty": "^1.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "build": {
    "appId": "com.microindole.elevim",
    "productName": "Elevim Editor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "resources/logo-me.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/logo-me.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Microindole",
        "repo": "elevim"
      }
    ]
  }
}
